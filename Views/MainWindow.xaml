<Window x:Class="CryptoInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoInfo"
        mc:Ignorable="d"
        Title="CryptoInfo" Height="650" Width="1000" ResizeMode="CanMinimize">

    <DockPanel>

        <TabControl x:Name="MainTabControl" Margin="0,5,0,0" SelectedItem="Top">
            <TabItem Header="Top of Cryptos">
                <Frame x:Name="TopOfCryptos" Content="{Binding TopOfCryptosPage}" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem Header="Search">
                <Frame x:Name="SearchCrypto" Content="{Binding SearchCryptoPage}" NavigationUIVisibility="Hidden"/>
            </TabItem>

        </TabControl>
    </DockPanel>
</Window>
